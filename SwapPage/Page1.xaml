<Page x:Class="SwapPage.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SwapPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="93*"/>
            <ColumnDefinition Width="307*"/>
        </Grid.ColumnDefinitions>
        <Frame x:Name="Frame1" Content="Frame" Foreground="#FFCC1111" Background="White" Grid.ColumnSpan="2" />
        <Button Content="Button" HorizontalAlignment="Left" Margin="174,342,0,0" VerticalAlignment="Top" Width="80" Click="Button_Click" Background="#FF0758ED" Grid.Column="1"/>
        <Image x:Name="GrumpyCat" Grid.Column="1" HorizontalAlignment="Left" Height="183" Margin="131,60,0,0" VerticalAlignment="Top" Width="170" Source="/grumpy1.jpg">
            <Image.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Image.OpacityMask>
        </Image>

    </Grid>
</Page>
