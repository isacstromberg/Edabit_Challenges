<Window x:Class="Databinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Databinding"
      
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="327,217,0,0" TextWrapping="Wrap" Text="{Binding firstname}"  VerticalAlignment="Top" Width="120"/>
        <Label Content="{Binding firstname}" HorizontalAlignment="Left" Margin="309,180,0,0" VerticalAlignment="Top" Width="138"/>

    </Grid>
</Window>
